  width: 76%;
  margin: 30rpx auto;
  background:#866FFD;
  height: 90rpx;
  text-align: center;
  color: #fff;
  line-height: 90rpx;
  border-radius: 45rpx;
}

checkbox .wx-checkbox-input {  
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  border: 4rpx solid #aaa !important;/* 设置边框（外圆） */
}
/*checkbox选中后样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  border: 4rpx solid #866FFD !important;
  background:#fff !important;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  border-radius: 50%;
  text-align: center;
  color: #866FFD;
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  background-color: #fff !important;
  font-size: 22rpx;
  font-weight: bolder;
  transform:translate(-50%, -50%) scale(1);
  -webkit-transform:translate(-50%, -50%) scale(1);
}
.mask{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #666;
  opacity: 0.8;
  z-index: 100;
}

.form-box{
  position: fixed;
  top: 20vh;
  left: 10vw;
  right: 10vw;
  background-color: #fff;
  padding: 30rpx;
  z-index: 101;
  border-radius: 30rpx;
}
.form-item{
  align-items: center;
  display: flex;
  border-bottom: 2rpx solid #eee;
  height: 100rpx;
  line-height: 100rpx;
}
.form-lable{
  margin-right: 30rpx;
}

.form-item:last-child{
  border-bottom: none;
}
.form-value{
  flex: 1;
  
  height: max-content;
}
