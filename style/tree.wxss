page{
  font-size: 34rpx;
}
.chain-panel{
  width:100%;
  padding: 30rpx;
  background-color: #fff;
  height:100%;
  position: relative;
  z-index: 3;  
  box-sizing: border-box;
  padding-bottom: 200rpx;
}
.chain-panel>view{
  padding: 30rpx;
}
@keyframes right-to-left{
  0% {max-width:0;overflow:hidden;}
  100% {max-width: 100rem;}  
}
.chain-show{
  animation: right-to-left 3s ;
  -moz-animation: right-to-left 3s ;
  -webkit-animation: right-to-left 3s;
  animation-fill-mode:forwards;
}
.chain-btn{
  display: inline-block;  
  padding:12rpx 0;
  text-align: center;
  margin-top:12rpx;
  z-index: 5;
}
.chain-top,.chain-second{
  color:#fff;
  height: 60rpx;
  line-height: 60rpx;
}
.chain-top{
  background-color: #866FFD;
  border-radius: 30rpx;  
  padding:0 60rpx;
}
.chain-second{
  background-color: #866FFD;
  border-radius: 30rpx;
  padding:0 30rpx;
}
.chain-view{
  position: relative; 
  padding-left: 30rpx;
}
.chain-view>.chain-btn:before{
  content: " ";
  left:30rpx;
  display: inline-block;
  position: absolute;
  border-left: 2rpx solid #866FFD;
  
  width:30rpx;
  top:-30rpx;
  bottom:30rpx;
  z-index: -1;
}
.chain-child .chain-view:last-child .chain-btn::before{
  content: " ";
  left:30rpx;
  display: inline-block;
  position: absolute;
  border-left: 2rpx solid #866FFD;
  height: 70rpx;
  
  width:30rpx;
  top:-30rpx;
  bottom:30rpx;
  z-index: -1;
}
.chain-view>.chain-btn::after{
  content: " ";
  left:30rpx;
  display: inline-block;
  position: absolute;
  
  border-bottom: 2rpx solid #866FFD;
  width:30rpx;
  height: 70rpx;
  top:-30rpx;
  bottom:30rpx;
  z-index: -1;
}


.chain-view-right{
  
  margin-left:30rpx;
}

.no-before:before{
  display: none;
}
.chain-child:not(:last-child):before{
  content: " ";
  left:30rpx;
  display: inline-block;
  position: absolute;
  border-left: 2rpx solid #866FFD;
  /* border-bottom: 2rpx solid #866FFD; */
  width:30rpx;
  top:-30rpx;
  bottom:30rpx;
  z-index: -1;
}
.videos{  
  margin-left: 30rpx;
}
.video{
  display: inline-block;
}

.form-check__label{
  display: flex;
