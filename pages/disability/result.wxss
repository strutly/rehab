Page{
  font-size: 34rpx;
}
.main-box{
  padding-bottom: calc(144rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(144rpx + env(safe-area-inset-bottom));
}
.item-box{
  border: 2rpx solid #eee;
  border-radius: 24rpx;
  width: 92%;
  margin: 30rpx auto;
  padding: 0 30rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.item-title{
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 30rpx;
  background-color: #866FFD;
}
.item-lable{
  padding-left: 66rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 2rpx #eee solid;
}
.item-lable-0{
  color: #866FFD;
}
.item-lable--1{
  color:#aaa;
}
.item-lable-1{
  color:#F85A6D;
}
.item-box .item-lable:last-child{
  border-bottom: none;
}
.title{
  margin: 30rpx auto;
  text-align: center;
}

.padding0{
  padding: 0;
}
.top-item{
  display: flex;
  border-bottom: 2rpx solid #eee;
  height: 100rpx;
  line-height: 100rpx;
}
.no-bottom{
  border-bottom:none;
}
.top-item:last-child{
  border-bottom: none;
}

.top-lable{
  flex: 1;
}

.top-value-0{
  color: #866FFD;
}
.top-value-1{
  color: #C280FF;  
}
.top-value-2{
  color: #F59A23;
}
.top-value-3{
  color:#F85A6D;  
}
.video-title{
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  align-items: center;
  background-color: #F2F2F2;
  
}
.video-title span{
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  background-color: #F85A6D;
  margin: 30rpx;
}
.span-back-0{
  background-color: #866FFD !important;
}
.span-back-1{
  background-color: #C280FF !important;
}
.span-back-2{
  background-color: #F59A23 !important;
}
.span-back-3{
  background-color:#F85A6D !important;
}


.video-title label{
  flex:1;  
}
.video-box{
  width: 100%;  
  white-space: nowrap;
}
.video-item-box{
  padding: 30rpx;
  display: inline-block;
}
.item-cells{
  display: inline-block;
}
.item-cell{
  display: inline-block;
  text-align: center;
  margin-right: 30rpx;
}
.item-cells .item-cell:last-child{
  margin-right: 0;
}
.item-cell-image-box{
  width: 500rpx;
  height: 286rpx;
  border:2rpx solid #eee;
  position: relative;
}
.item-cell-image-back{
  position: relative;
  width: 100%;
  height: 100%;
}
.item-cell-image-back::after{
  position: absolute;
  top: 0;
  left: 0;
  content: '';
  width: 100%;
  height: 100%;
  background-color: #666;
  opacity: 0.5;
}

.item-cell-image-play{
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  top: 103rpx;
  left: 210rpx;
}

.item-cell-title{
  line-height: 40rpx;
  height: 40rpx;
  margin-top: 30rpx;
}
.item-cell-title lable{
  font-size: 30rpx; 
  color:#866FFD;
  border-bottom: 2rpx solid #866FFD;
  display: inline;
}



.btn-box{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
.btn{
  width: 76%;
  margin: 30rpx auto;
  background:#866FFD;
  height: 90rpx;
  text-align: center;
  color: #fff;
  line-height: 90rpx;
  border-radius: 45rpx;
}

